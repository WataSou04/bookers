<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <div class="erea">
    <h4 class="heading">Title</h4>
    <%= f.text_field :title %>
  </div>
  
  <div class="erea">
    <h4 class="heading">Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="update"><%= f.submit 'Update Book' %></div>
  
  <a><%= link_to "Show", book_path(@book.id) %></a>
  |
  <a><%= link_to "Back", books_path %></a>
 <% end %>