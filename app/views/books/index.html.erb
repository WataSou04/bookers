<h1 class="index-books">Books</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
<% @books.each do |book| %>
    <tr>
      <td class="index-title"><%= book.title %></td>
      <td class="index-body"><%= book.body %></td>
      <td class="action"><%= link_to "Show", book_path(book.id) %></td>
      <td class="action"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="action"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
<% end %>
  </table>

<h1 class="new-book">New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4 class="new-body">Body</h4>
  <%= f.text_area :body %>
  
  <p class="create-book"><%= f.submit 'Create Book' %></p>
<% end %>